<div class="container">

    <h3><a href="/cursos">Lista de Cursos</a></h3>
    <h1>Detalle del curso</h1>
    
        <table>
            <tbody>
                <tr>
                    <td>Nombre</td>
                    <td> {{ curso.nombre}} </td>
                </tr>
                <tr>
                    <td>Creditos</td>
                    <td>{{ curso.creditos}} </td>
                </tr>
                <tr>
                    <td>Nro horas</td>
                    <td> {{curso.nro_horas}} </td>
                </tr>
            </tbody>
        </table>

        <h3> <a href="/cursos/edit/{{ curso._id }}" >EDIT</a></h3>

        <form action="/cursos/delete/{{ curso._id }}" method="POST">
            <button type="submit" >DELETE</button>
        </form>
        

    </form>
</div>
