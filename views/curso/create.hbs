<div class="container">
    <h3><a href="/cursos">Lista de cursos</a></h3>
    <h1>Crear nuevo curso</h1>

    <form action="/cursos/save" method="post">
        <div class="form-group">
            <label for="nombre">Nombre </label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre"/>
        </div>
        <div class="form-group">
            <label for="creditos">Creditos </label>
            <input type="text" class="form-control" id="creditos" name="creditos" placeholder="Creditos"/>
        </div>
        <div class="form-group">
            <label for="nro_horas">Nro horas</label>
            <input type="text" class="form-control" id="nro_horas" name="nro_horas" placeholder="Nro horas"/>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Grabar">
        </div>
    </form>
</div>
