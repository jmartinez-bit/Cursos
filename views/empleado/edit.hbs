<div class="container">
    <h3><a href="/empleados">Lista de empleados</a></h3>

    <h1>Editar empleado</h1>

    <form action="/empleados/update/{{ empleado.id }} " method="post">
        <table>
            <tbody>
                <tr>
                    <td>Nombre</td>
                    <td><input type="text" name="nombre" value="{{ empleado.nombre }}"/> </td>
                </tr>
                <tr>
                    <td>Apellido</td>
                    <td><input type="text" name="apellido" value="{{ empleado.apellido }}" /> </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" name="email" value="{{ empleado.email }}" /> </td>
                </tr>
                <tr>
                    <td>Dni</td>
                    <td><input type="text" name="dni" value="{{ empleado.dni }}" /></td>
                </tr>
                <tr>
                    <td>Sexo</td>
                    <td><input type="text" name="sexo" value="{{ empleado.sexo }}" /></td>
                </tr>
                <tr>
                    <td colspan="2" > 
                        <input type="submit" value="Update" />
                    </td>
                </tr>
            </tbody>
        </table>

    </form>
</div>
