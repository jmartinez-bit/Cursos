<div class="container">

    <h3><a href="/empleados">Lista de Empleados</a></h3>
    <h1>Detalle del empleado</h1>
    
        <table>
            <tbody>
                <tr>
                    <td>Nombre</td>
                    <td> {{ empleado.nombre}} </td>
                </tr>
                <tr>
                    <td>Apellido</td>
                    <td>{{ empleado.apellido}} </td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td> {{empleado.email}} </td>
                </tr>
                <tr>
                    <td>Dni</td>
                    <td> {{empleado.dni}} </td>
                </tr>
                <tr>
                    <td>Sexo</td>
                    <td> {{empleado.sexo}} </td>
                </tr>
            </tbody>
        </table>

        <h3> <a href="/empleados/edit/{{ empleado._id }}" >EDIT</a></h3>

        <form action="/empleados/delete/{{ empleado._id }}" method="POST">
            <button type="submit" >DELETE</button>
        </form>
        

    </form>
</div>
